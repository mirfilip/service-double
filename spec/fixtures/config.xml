<?xml version="1.0" encoding="utf-8"?>
<handlers>
    <handler response="foo_response.xml">
        <matcher type="equals" name="request.method" value="foo" />
    </handler>
    <handler>
        <matcher type="equals" name="request.method" value="bar" />
        <responses>
            <response>bar_response.xml</response>
            <response>foo_response.xml</response>
        </responses>
    </handler>
</handlers>
